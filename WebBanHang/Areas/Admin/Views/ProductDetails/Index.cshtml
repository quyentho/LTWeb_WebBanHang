@model IEnumerable<WebBanHang.Models.ProductDetails>
@{
    ViewData["Title"] = "Index";
}

<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Attribute List </h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" asp-route-productId="@ViewBag.ID" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Attribute</a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Attribute)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Value)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Attribute)
            </td>
            <td>
                @Html.DisplayFor(m => item.Value)
            </td>
            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
        }
    </table>
</div>
